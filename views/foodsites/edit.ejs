<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Foodsite</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/foodsites/<%=foodsite._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="foodsite[title]"
          value="<%=foodsite.title %>"
          required
        />
        <div class="valid-feedback">Looks fine!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="foodsite[location]"
          value="<%=foodsite.location %>"
          required
        />
        <div class="valid-feedback">Looks fine!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="contact">Contact No</label>
        <div class="input-group">
          <span class="input-group-text" id="contact-label">&#128222;</span>
          <input
            type="text"
            class="form-control"
            id="contact"
            placeholder="1234567890"
            aria-label="contact"
            aria-describedby="contact-label"
            name="foodsite[contact]"
            value="<%=foodsite.contact %>"
            required
          />\
          <div class="valid-feedback">Looks fine!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="foodsite[description]"
          required
        >
<%= foodsite.description%></textarea
        >
        <div class="valid-feedback">Looks fine!</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Add more image(s)...</span
            >
            <span class="form-file-button">Browse</span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <% foodsite.images.forEach(function(img, i) { %>

        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% })%>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update Foodsite</button>
      </div>
    </form>
    <a href="/foodsites/<%= foodsite._id%>">
      <button class="btn btn-info mb-2">Back To Foodsite</button>
    </a>
  </div>
</div>
